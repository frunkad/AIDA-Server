{
  "name": "jarvis-server",
  "version": "0.0.0",
  "description": "Server to control all requests directed to my IoT devices in home",
  "main": "./build/index.js",
  "author": "Nikhil Warke",
  "license": "MIT",
  "repository": "https://github.com/nickdex/Jarvis-server.git",
  "bugs": {
    "url": "https://github.com/jsynowiec/node-typescript-boilerplate/issues"
  },
  "engineStrict": true,
  "engines": {
    "node": ">= 9.8.0"
  },
  "scripts": {
    "start": "node dist/server.js",
    "build": "tsc -p tsconfig.release.json",
    "dev": "yarn run build && node dist/server.js",
    "local": "yarn run build && yarn run serve",
    "serve": "forever start dist/server.js ",
    "stop": "forever stop dist/server.js",
    "clean": "rimraf coverage dist tmp",
    "watch": "tsc -w -p tsconfig.release.json",
    "lint": "tslint -t stylish --project \"tsconfig.json\"",
    "pretest": "yarn run lint",
    "test": "yarn run test-only",
    "test-only": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@feathersjs/express": "^1.2.0",
    "@feathersjs/feathers": "^3.1.3",
    "body-parser": "^1.18.2",
    "concurrently": "^3.5.1",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "feathers-nedb": "^3.0.0",
    "lodash": "^4.17.4",
    "morgan": "^1.9.0",
    "mqtt": "^2.15.1",
    "nedb": "^1.8.0",
    "pug": "^2.0.0-rc.4",
    "tslib": "~1.9.0",
    "typescript": "^2.6.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/dotenv": "^4.0.2",
    "@types/express": "^4.0.35",
    "@types/feathersjs__express": "^1.1.2",
    "@types/feathersjs__feathers": "^3.0.0",
    "@types/jest": "^22.1.0",
    "@types/lodash": "^4.14.97",
    "@types/morgan": "^1.7.32",
    "@types/nedb": "^1.8.5",
    "@types/node": "^9.3.0",
    "@types/shelljs": "^0.7.7",
    "forever": "^0.15.3",
    "jest": "^22.1.4",
    "nodemon": "^1.13.0",
    "shelljs": "^0.8.1",
    "ts-jest": "^22.0.1",
    "ts-node": "^4.0.2",
    "tslint": "^5.8.0",
    "tslint-microsoft-contrib": "~5.0.2",
    "tsutils": "^2.21.0"
  }
}
